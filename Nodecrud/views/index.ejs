<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>index</title>
</head>

<body>
    <form method="POST" action="/adddata">
        <table>
            <tr>
                <td>name</td>
                <td><input type="text" name="sname" id="" /></td>
            </tr>
            <tr>
                <td>address</td>
                <td><input type="text" name="address" id="" /></td>
            </tr>
            <tr>
                <td>city</td>
                <td><input type="text" name="city" id="" /></td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="submit" name="submit" /></td>
            </tr>
        </table>

        <table>
            <tr>
                <th>id</th>
                <th>name</th>
                <th>address</th>
                <th>city</th>
                <th>update</th>
                <th>delete</th>
            </tr>
            <% for(var i=0; i< data.length; i++) { %>
            <tr>
                <td><%= data[i]._id %></td>
                <td><%= data[i].name %></td>
                <td><%= data[i].address %></td>
                <td><%= data[i].city %></td>
                <td><a href="/editdata?id=<%= data[i]._id %>">Edit</a></td>

            </tr>
            <% }%>
        </table>

    </form>


</body>

</html>